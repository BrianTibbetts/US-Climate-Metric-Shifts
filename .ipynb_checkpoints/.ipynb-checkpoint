    "\n",
    "\n",
    "# annual average temperature data for 1960 and 2019\n",
    "state_avg_temps_1960 = open(\"C:\\\\Users\\\\Brian\\\\Desktop\\\\COS 497 - GIS\\\\US Climate Metrics\\\\110-tavg-196006-12.csv\", \"r\")\n",
    "state_data_1960 = pd.read_csv(state_avg_temps_1960)\n",
