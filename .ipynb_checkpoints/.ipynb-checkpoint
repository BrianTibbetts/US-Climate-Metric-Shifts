   "source": [
    "# create a Chorpleth map\n",
    "# the color scale shows the intensity of temperature shift in the area\n",
    "m = fm.Map(width=800, height=500, location=[39, -100], overlay=False, zoom_start=4)\n",
    "\n",
    "# Layer options for the world map layer underneath the Choropleth\n",
    "fm.TileLayer(tiles='OpenStreetMap', overlay=True, name='OpenStreetMap').add_to(m) # OpenStreetMap: map is flat\n",
    "\n",
    "# set up a layer on the map for each year\n",
    "feature_group_1960 = fm.FeatureGroup(name='1960',overlay=False).add_to(m)\n",
    "choropleth1960 = fm.Choropleth(\n",
    "    geo_data=state_geo,\n",
    "    name='choropleth',\n",
    "    data=state_data_1960,\n",
    "    columns=['CDIV_', 'Anomaly (1901-2000 base period)'],\n",
    "    key_on='feature.properties.CDIV_',\n",
    "    fill_color='OrRd',\n",
    "    legend_name='Annual Average Temperature Anomaly (°F)'\n",
    ").geojson.add_to(feature_group_1960)\n",
    "\n",
    "feature_group_2019 = fm.FeatureGroup(name='2019',overlay=False).add_to(m)\n",
    "choropleth2019 = fm.Choropleth(\n",
    "    geo_data=state_geo,\n",
    "    name='choropleth',\n",
    "    data=state_data_2019,\n",
    "    columns=['CDIV_', 'Anomaly (1901-2000 base period)'],\n",
    "    key_on='feature.properties.CDIV_',\n",
    "    fill_color='OrRd',\n",
    "    legend_name='Annual Average Temperature Anomaly (°F)'\n",
    ").geojson.add_to(feature_group_2019)\n",
    "\n",
    "# add a menu to select a layer\n",
    "fm.LayerControl(collapsed=False).add_to(m)\n",
    "\n",
    "m"
   ]
